<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="student_detail_wizard_form_view" model="ir.ui.view">
        <field name="name">student.detail.wizard.form</field>            
        <field name="model">student.detail.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="checkout_ids"/>
                    <field name="age"/>
                    <field name="address"/>
                    <field name="gender" placeholder="Select your Gender" /> 
                    <field name="student_detail_id" invisible="1"/>  
                </group>
                <footer>
                    <button type="object" name="button_update" string="Update" />
                    <button special="cancel" string="Cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_student_detail_wizard" model="ir.actions.act_window">
        <field name="name">Student Detail Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.detail.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>        
    </record>
</odoo>
